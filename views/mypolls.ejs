<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body>

    <header>
       <% include ./partials/header %>
    </header>

    <main class="container">
        <div class="section">
           <h2 class="header center orange-text">My Polls</h2>
        </div>

        <div class="row center">
            <a href="/mypolls/add" class="btn-large waves-effect waves-light orange"><i class="material-icons left">add</i>Add Poll</a>
        </div>        

        <div class="row" id="MYPOLLS" >
        <% for(var i=0; i<polls.length; i++) {%>
            <div class="col s12 m6">
              <div class="card light-blue darken-1" data-id="<%= polls[i].id%>">
                <div class="card-content">
                  <span class="card-title"><a href="/mypolls/<%= polls[i].id%>" class="white-text" ><%= polls[i].title %></a></span>
                </div>
                <div class="card-delete right-align">
                    <a href="#!" class="btn-floating btn-small waves-effect waves-light light-red halfway-fab"><i class="material-icons">delete</i></a>
                </div>
              </div>
            </div>
        <% } %>
        </div>

    </main>

    <% include ./partials/footer %>

    <% include ./partials/footer-scripts %>

</body>
</html>